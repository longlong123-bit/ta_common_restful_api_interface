<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="api_connection_histories_form_view" model="ir.ui.view">
        <field name="name">api.connection.histories.form.view</field>
        <field name="model">api.connection.histories</field>
        <field name="arch" type="xml">
            <form string="Connection History" create="0" edit="0" import="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="create_date"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="url"/>
                            <field name="method"/>
                            <field name="message"/>
                            <field name="status"/>
                        </group>
                    </group>
                    <group>
                        <field name="request_body"/>
                    </group>
                    <group>
                        <field name="response_body"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="api_connection_histories_tree_view" model="ir.ui.view">
        <field name="name">api.connection.histories.tree.view</field>
        <field name="model">api.connection.histories</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0" decoration-danger="status != 200" decoration-success="status == 200">
                <field name="create_date"/>
                <field name="name"/>
                <field name="method"/>
                <field name="url"/>
                <field name="request_body"/>
                <field name="response_body" optional="hide"/>
                <field name="message"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="api_connection_histories_search_view" model="ir.ui.view">
        <field name="name">api.connection.histories.search.view</field>
        <field name="model">api.connection.histories</field>
        <field name="arch" type="xml">
            <search>
                <field name="create_date"/>
                <field name="name"/>
                <field name="status"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="api_connection_histories_action">
        <field name="name">Connection Histories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">api.connection.histories</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('api_connection_histories_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('api_connection_histories_form_view')})]"/>
        <field name="search_view_id" ref="api_connection_histories_search_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new api connection history.
            </p>
        </field>
    </record>
</odoo>